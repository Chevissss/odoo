<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol (lista) -->
    <record id="view_cancha_tree" model="ir.ui.view">
        <field name="name">reserva.cancha.tree</field>
        <field name="model">reserva.cancha</field>
        <field name="arch" type="xml">
            <tree string="Canchas Deportivas">
                <field name="codigo"/>
                <field name="name"/>
                <field name="tipo_deporte"/>
                <field name="tipo_superficie"/>
                <field name="precio_hora" widget="monetary"/>
                <field name="estado" widget="badge" decoration-success="estado=='disponible'" 
                       decoration-warning="estado=='mantenimiento'" decoration-danger="estado=='inactiva'"/>
                <field name="reservas_count"/>
                <field name="disponibilidad_hoy" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_cancha_form" model="ir.ui.view">
        <field name="name">reserva.cancha.form</field>
        <field name="model">reserva.cancha</field>
        <field name="arch" type="xml">
            <form string="Cancha Deportiva">
                <header>
                    <button name="action_set_disponible" string="Marcar Disponible" 
                            type="object" class="oe_highlight"
                            invisible="estado == 'disponible'"/>
                    <button name="action_set_mantenimiento" string="Enviar a Mantenimiento" 
                            type="object" 
                            invisible="estado == 'mantenimiento'"/>
                    <field name="estado" widget="statusbar" statusbar_visible="disponible,mantenimiento,inactiva"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_reservas" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="reservas_count" widget="statinfo" string="Reservas"/>
                        </button>
                    </div>
                    <field name="imagen" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la cancha"/>
                        </h1>
                        <h3>
                            <field name="codigo" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="tipo_deporte"/>
                            <field name="tipo_superficie"/>
                            <field name="capacidad"/>
                            <field name="precio_hora" widget="monetary"/>
                        </group>
                        <group string="Características">
                            <field name="techada"/>
                            <field name="iluminacion"/>
                            <field name="vestuarios"/>
                            <field name="estacionamiento"/>
                        </group>
                    </group>
                    <group>
                        <group string="Estado Actual">
                            <field name="disponibilidad_hoy" widget="boolean"/>
                            <field name="ingresos_total" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="descripcion" placeholder="Descripción detallada de la cancha..."/>
                        </page>
                        <page string="Reservas">
                            <field name="reserva_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="cliente_id"/>
                                    <field name="fecha"/>
                                    <field name="hora_inicio" widget="float_time"/>
                                    <field name="hora_fin" widget="float_time"/>
                                    <field name="estado" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_cancha_kanban" model="ir.ui.view">
        <field name="name">reserva.cancha.kanban</field>
        <field name="model">reserva.cancha</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="codigo"/>
                <field name="tipo_deporte"/>
                <field name="precio_hora"/>
                <field name="estado"/>
                <field name="imagen"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('reserva.cancha', 'imagen', record.id.raw_value)" alt="Imagen"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-pill">
                                        <field name="tipo_deporte"/>
                                    </span>
                                </div>
                                <ul>
                                    <li>Código: <field name="codigo"/></li>
                                    <li>Precio: S/ <field name="precio_hora"/></li>
                                    <li>Estado: <field name="estado" widget="badge"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_cancha" model="ir.actions.act_window">
        <field name="name">Canchas Deportivas</field>
        <field name="res_model">reserva.cancha</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera cancha deportiva
            </p>
            <p>
                Gestiona las canchas disponibles para reservas.
            </p>
        </field>
    </record>
</odoo>
