<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de árbol -->
    <record id="view_cliente_tree" model="ir.ui.view">
        <field name="name">reserva.cliente.tree</field>
        <field name="model">reserva.cliente</field>
        <field name="arch" type="xml">
            <tree string="Clientes">
                <field name="name"/>
                <field name="documento"/>
                <field name="telefono"/>
                <field name="email"/>
                <field name="tipo_cliente" widget="badge"/>
                <field name="total_reservas"/>
                <field name="total_gastado" widget="monetary"/>
                <field name="ultima_reserva"/>
                <field name="activo" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">reserva.cliente.form</field>
        <field name="model">reserva.cliente</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <header>
                    <button name="action_crear_usuario_portal" string="Crear Usuario Portal" 
                            type="object" class="oe_highlight"
                            invisible="user_id != False"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_reservas" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="total_reservas" widget="statinfo" string="Reservas"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactivo" bg_color="text-bg-danger" 
                            invisible="activo == True"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre completo del cliente"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información Personal">
                            <field name="documento"/>
                            <field name="telefono"/>
                            <field name="email"/>
                            <field name="fecha_nacimiento"/>
                            <field name="direccion"/>
                        </group>
                        <group string="Información del Cliente">
                            <field name="tipo_cliente" widget="badge"/>
                            <field name="activo" widget="boolean_toggle"/>
                            <field name="total_gastado" widget="monetary"/>
                            <field name="ultima_reserva"/>
                        </group>
                    </group>
                    <group string="Acceso Portal">
                        <field name="user_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Notas">
                            <field name="notas" placeholder="Observaciones sobre el cliente..."/>
                        </page>
                        <page string="Historial de Reservas">
                            <field name="reserva_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="cancha_id"/>
                                    <field name="fecha"/>
                                    <field name="hora_inicio" widget="float_time"/>
                                    <field name="monto_total" widget="monetary"/>
                                    <field name="estado" widget="badge"/>
                                    <field name="pagado" widget="boolean"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_cliente_kanban" model="ir.ui.view">
        <field name="name">reserva.cliente.kanban</field>
        <field name="model">reserva.cliente</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="telefono"/>
                <field name="email"/>
                <field name="tipo_cliente"/>
                <field name="total_reservas"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-pill">
                                        <field name="tipo_cliente"/>
                                    </span>
                                </div>
                                <ul>
                                    <li>Teléfono: <field name="telefono"/></li>
                                    <li>Email: <field name="email"/></li>
                                    <li>Reservas: <field name="total_reservas"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_cliente_search" model="ir.ui.view">
        <field name="name">reserva.cliente.search</field>
        <field name="model">reserva.cliente</field>
        <field name="arch" type="xml">
            <search string="Buscar Clientes">
                <field name="name"/>
                <field name="documento"/>
                <field name="telefono"/>
                <field name="email"/>
                <filter string="Activos" name="activos" domain="[('activo', '=', True)]"/>
                <filter string="Inactivos" name="inactivos" domain="[('activo', '=', False)]"/>
                <separator/>
                <filter string="Clientes Frecuentes" name="frecuentes" domain="[('tipo_cliente', '=', 'frecuente')]"/>
                <filter string="Clientes Ocasionales" name="ocasionales" domain="[('tipo_cliente', '=', 'ocasional')]"/>
                <filter string="Clientes Nuevos" name="nuevos" domain="[('tipo_cliente', '=', 'nuevo')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo de Cliente" name="group_tipo" context="{'group_by': 'tipo_cliente'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">reserva.cliente</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_activos': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registra tu primer cliente
            </p>
            <p>
                Gestiona la información de tus clientes.
            </p>
        </field>
    </record>
</odoo>
